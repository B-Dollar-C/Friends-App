<% if user_signed_in? %>
<div class= "container">
<h1>Friends List</h1>
<br>
</div>

<table class="table table-striped table-bordered table-hover">
<thead class= "thead-dark">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Instagram</th>
    <th>User ID</th>
    <th> </th>
  </tr>
</thead>

<tbody>

  <% @friends.each do |friend| %>
    <tr>
    <td><%=link_to "#{friend.first_name} #{friend.last_name}",friend %> 
    </td>
    <td><%= friend.email %></td>
    <td><%= friend.phone %></td>
    <td><%= friend.instagram %></td>
    <td><%= friend.user_id%></td>
   
    
    <td><%= button_to 'Delete', friend, class: "btn btn-outline-danger btn-sm", method: :delete, form: {data: {turbo_confirm: "Are you sure? " + friend.first_name + " will be deleted from your friends list!"}}%></td>
  </tr>
  <% end %>
</tbody>
</table>
    <br>
<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>

<% else %>
  <h1>Hello World! </h1>
This is my first Rails Webpage...</br></br>
<%= link_to "Explore Now", new_user_registration_path, class: "btn btn-info" %>
<%= link_to "Welcome Back", new_user_session_path, class: "btn btn-secondary" %>
<% end %>


